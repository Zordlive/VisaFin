# Coolify runtime configuration
# This prevents Coolify from trying to auto-detect and add unnecessary packages

[runtime]
# Use custom nixpacks.toml configuration
nixpacks = true

[build]
# Python version to use
pythonVersion = "3.9"

# Build command - pip install will happen automatically
buildCommand = "pip install -r requirements.txt && python manage.py collectstatic --noinput --clear || true"

[start]
# Start command with migrations
startCommand = "python manage.py migrate --noinput && gunicorn invest_backend.wsgi:application --bind 0.0.0.0:$PORT --workers 4 --timeout 60"
